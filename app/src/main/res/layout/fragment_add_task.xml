<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".NewNoteFragment"
        android:padding="12dp">

        <TextView
            android:id="@+id/addTaskHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:text="Add Task"
            android:textStyle="bold"
            android:textColor="@color/darkestPink"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/addTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/addTaskHeading"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:fontFamily="@font/poppins"
            android:hint="Enter the title"
            android:maxLines="1"
            android:padding="12dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/addTaskDesc"
            android:layout_width="399dp"
            android:layout_height="400dp"
            android:layout_below="@id/addTaskTitle"
            android:layout_marginTop="80dp"
            android:background="@drawable/border"
            android:fontFamily="@font/poppins"
            android:gravity="top"
            android:hint="Enter the description"
            android:padding="12dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/addTaskPrio"
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:layout_below="@+id/addTaskTitle"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border"
            android:fontFamily="@font/poppins"
            android:hint="Priority"
            android:padding="12dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/addDeadline"
            android:layout_width="391dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/addTaskDesc"
            android:background="@drawable/border"
            android:hint="Deadline"
            android:padding="12dp"
            android:ems="10"
            android:textSize="18sp"
            android:inputType="date" />

    </RelativeLayout>
</layout>